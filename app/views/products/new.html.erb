<h1>New product</h1>

<% form_for(@product, :html => {:multipart => true}) do |f| %>
  
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <%= add_photo(f) %>
  </p>
  
  <p>
	Attach a file or image <br />
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', products_path %>